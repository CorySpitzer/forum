<h2>New Post</h2>
<form>
  <div class="form-group">
    <label for="title">Title:</label>
    {{input value=title id="title" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="body">Body:</label>
    {{input value=body id="body" class="form-control"}}
  </div>

  <!-- We define the action 'ask' in the new-question.js controller -->
  <button class="btn btn-success" {{action 'ask'}}>Ask</button>
</form>
